{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017", "dom"],
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "plugins": [{ "name": "typescript-tslint-plugin" }],
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@nx-toh/api": ["libs/api/src/index.ts"],

      "@nx-toh/shared/animations": ["libs/shared/animations/src/index.ts"],
      "@nx-toh/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@nx-toh/shared/models": ["libs/shared/models/src/index.ts"],
      "@nx-toh/shared/theme": ["libs/shared/theme/src/index.ts"],
      "@nx-toh/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@nx-toh/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@nx-toh/tour-of-heroes/feature/detail": ["libs/tour-of-heroes/feature/detail/src/index.ts"],
      "@nx-toh/tour-of-heroes/feature/list": ["libs/tour-of-heroes/feature/list/src/index.ts"],
      "@nx-toh/tour-of-heroes/feature/search": ["libs/tour-of-heroes/feature/search/src/index.ts"],
      "@nx-toh/tour-of-heroes/shared/data-access": [
        "libs/tour-of-heroes/shared/data-access/src/index.ts"
      ],
      "@nx-toh/tour-of-heroes/shared/ui": ["libs/tour-of-heroes/shared/ui/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictTemplates": true
  },
  "exclude": ["node_modules", "tmp"]
}
