{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017", "dom"],
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@nx-toh/api": ["libs/api/src/index.ts"],
      "@nx-toh/demo-one/feature/page-one": ["libs/demo-one/feature/page-one/src/index.ts"],
      "@nx-toh/demo-one/feature/page-two": ["libs/demo-one/feature/page-two/src/index.ts"],
      "@nx-toh/demo-one/feature/shell": ["libs/demo-one/feature/shell/src/index.ts"],
      "@nx-toh/shared/animations": ["libs/shared/animations/src/index.ts"],
      "@nx-toh/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@nx-toh/shared/models": ["libs/shared/models/src/index.ts"],
      "@nx-toh/shared/theme": ["libs/shared/theme/src/index.ts"],
      "@nx-toh/shared/ui-core": ["libs/shared/ui-core/src/index.ts"],
      "@nx-toh/shared/ui-heroes": ["libs/shared/ui-heroes/src/index.ts"],
      "@nx-toh/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@nx-toh/tour-of-heroes/heroes/feature": ["libs/tour-of-heroes/heroes/feature/src/index.ts"],
      "@nx-toh/tour-of-heroes/heroes/data-access": [
        "libs/tour-of-heroes/heroes/data-access/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictTemplates": true
  },
  "exclude": ["node_modules", "tmp"]
}
